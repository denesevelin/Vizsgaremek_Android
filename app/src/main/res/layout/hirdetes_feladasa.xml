<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/relativeLayoutHirdetesFeladasa">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hirdetés feladása"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/textViewHirdetesFeladasaHirdetesFeladasa"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kezdő időpont"
            android:layout_below="@id/textViewHirdetesFeladasaHirdetesFeladasa"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/editTextKezdoIdoptHirdetesFeladasa"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Záró időpont"
            android:layout_below="@id/textViewHirdetesFeladasaHirdetesFeladasa"
            android:layout_toEndOf="@+id/editTextKezdoIdoptHirdetesFeladasa"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:id="@+id/editTextZaroIdoptHirdetesFeladasa"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategória"
            android:layout_below="@id/editTextKezdoIdoptHirdetesFeladasa"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/textViewKategoriaHirdetesFeladasa"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewKategoriaHirdetesFeladasa"
            android:spinnerMode="dropdown"
            android:id="@+id/spinnerKategoriaHirdetesFeladasa"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Település"
            android:layout_below="@id/spinnerKategoriaHirdetesFeladasa"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/textViewTelepulesHirdetesFeladasa"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTelepulesHirdetesFeladasa"
            android:spinnerMode="dropdown"
            android:id="@+id/spinnerTelepulesHirdetesFeladasa"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cím"
            android:layout_below="@id/spinnerTelepulesHirdetesFeladasa"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/textViewCimHirdetesFeladasa"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewCimHirdetesFeladasa"
            android:id="@+id/editTextCimHirdetesFeladasa"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefonszám"
            android:layout_below="@id/editTextCimHirdetesFeladasa"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/textViewTelszamHirdetesFeladasa"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTelszamHirdetesFeladasa"
            android:id="@+id/editTextTelszamHirdetesFeladasa"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leírás"
            android:layout_below="@+id/editTextTelszamHirdetesFeladasa"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/textViewLeirasHirdetesFeladasa"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="10"
            android:minLines="5"
            android:gravity="top|left"
            android:layout_below="@+id/textViewLeirasHirdetesFeladasa"
            android:inputType="textMultiLine"
            android:maxLines="15"
            android:id="@+id/editTextLeirasHirdetesFeladasa"/>

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Mentés"
            android:layout_below="@+id/editTextLeirasHirdetesFeladasa"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/buttonMentesHirdetesFeladasa"/>

    </RelativeLayout>

</ScrollView>